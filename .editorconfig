# Xml resource files
[*.{resx,resw}]
indent_size = 2

# WIX files
[*.wx{s,l,i}]
indent_size = 2
indent_style = space

# JSON files
[*.{json,bowerrc}]
indent_style = tab

# SQL files
[*.sql]
indent_size = 2

# XAML files
[*.xaml]
indent_style = tab
tab_width = 2
indent_size = 1

# SHFB content files
[*.{content,aml}]
indent_style = tab
tab_width = 2
indent_size = 1

# Web files
[*.{htm,html,cshtml,css,js}]
indent_style = tab
tab_width = 2

# Camel casing for naming rules
dotnet_naming_style.camel_case_style.capitalization = camel_case

# Camel casing with a leading _ for naming rules
dotnet_naming_style.camel_case_with_under_prefix.capitalization = camel_case
dotnet_naming_style.camel_case_with_under_prefix.required_prefix = _

# Camel casing with a leading s_ for naming rules
dotnet_naming_style.camel_case_with_s_under_prefix.capitalization = camel_case
dotnet_naming_style.camel_case_with_s_under_prefix.required_prefix = s_

# All private fields for naming rules
dotnet_naming_symbols.any_private_fields.applicable_kinds = field
dotnet_naming_symbols.any_private_fields.applicable_accessibilities = private

# All private fields for naming rules
dotnet_naming_symbols.any_private_static_fields.applicable_kinds = field
dotnet_naming_symbols.any_private_static_fields.applicable_accessibilities = private
dotnet_naming_symbols.any_private_static_fields.required_modifiers = static

# All parameters for naming rules
dotnet_naming_symbols.any_params.applicable_kinds = parameter
dotnet_naming_symbols.any_params.applicable_accessibilities = *

# Naming rule: All private fields should be Camel case, and prefixed with _
dotnet_naming_rule.private_fields_have_prefix.symbols = any_private_fields
dotnet_naming_rule.private_fields_have_prefix.style = camel_case_with_under_prefix
dotnet_naming_rule.private_fields_have_prefix.severity = warning

# Naming rule: All private static fields should be Camel case, and prefixed with s_
dotnet_naming_rule.private_fields_have_prefix.symbols = any_private_static_fields
dotnet_naming_rule.private_fields_have_prefix.style = camel_case_with_s_under_prefix
dotnet_naming_rule.private_fields_have_prefix.severity = warning

# Naming rule: All parameters must be Camel case
dotnet_naming_rule.params_are_camel_case.symbols = any_params
dotnet_naming_rule.params_are_camel_case.style = camel_case_style
dotnet_naming_rule.params_are_camel_case.severity = error
